<Window x:Class="BankApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApp"
        mc:Ignorable="d"
        Title="DBS Bank Application" Height="700" Width="1000" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem x:Name="MenuItemLogin" Header="_Login" Click="MenuItemLogin_Click"/>
                <MenuItem x:Name="MenuItemLogout" Header="Log _Out" Click="MenuItemLogout_Click" Visibility="Collapsed"/>
                <Separator />
                <MenuItem Header="E_xit" Click="MenuItemExit_Click"/>
            </MenuItem>
            <MenuItem x:Name="MenuAccount" Header="_Account" Visibility="Collapsed">
                <MenuItem x:Name="MenuItemNewAccount" Header="_New Account" Click="MenuItemNewAccount_Click"/>
                <MenuItem x:Name="MenuItemEditAccount" Header="_Edit Account" Click="MenuItemEditAccount_Click"/>
                <Separator />
                <MenuItem x:Name="MenuItemDeposit" Header="_Deposit Funds" Click="MenuItemDeposit_Click"/>
                <MenuItem x:Name="MenuItemWithdraw" Header="_Withdraw Funds" Click="MenuItemWithdraw_Click"/>
                <MenuItem x:Name="MenuItemTransfer" Header="Trans_fer Funds" Click="MenuItemTransfer_Click"/>
                <Separator />
                <MenuItem x:Name="MenuItemViewTransactions" Header="_View Transactions" Click="MenuItemViewTransactions_Click"/>
                <MenuItem x:Name="MenuItemExportXml" Header="Export Account to _XML" Click="MenuItemExportXml_Click"/>
            </MenuItem>
            <MenuItem x:Name="MenuManage" Header="_Manage" Visibility="Collapsed">
                <MenuItem x:Name="MenuItemApproveTransactions" Header="_Approve Transactions" Click="MenuItemApproveTransactions_Click" />
                <MenuItem x:Name="MenuItemManageStaff" Header="Manage _Staff" Click="MenuItemManageStaff_Click" />
            </MenuItem>

        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarUserGreeting" Text="Not logged in"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="StatusBarMessage" Text=""/>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area -->
        <Border Padding="10" Background="WhiteSmoke">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Border>

    </DockPanel>
</Window>
