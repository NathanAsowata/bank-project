<Page x:Class="BankApp.Pages.TransferPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BankApp.Pages"
      mc:Ignorable="d"
       d:DesignHeight="600" d:DesignWidth="700"
      Title="Transfer Funds"
      Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="White">

        <Grid Margin="20" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Source Account Info -->
                <RowDefinition Height="Auto"/>
                <!-- Transfer Type -->
                <RowDefinition Height="Auto"/>
                <!-- Destination Internal -->
                <RowDefinition Height="Auto"/>
                <!-- Destination External -->
                <RowDefinition Height="Auto"/>
                <!-- Amount -->
                <RowDefinition Height="Auto"/>
                <!-- Description -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons (Transfer / Back) -->
                <RowDefinition Height="*"/>
                <!-- Spacer -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Labels -->
                <ColumnDefinition Width="*"/>
                <!-- Controls -->
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Transfer Funds" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <!-- Source Account Info -->
            <GroupBox Grid.Row="1" Grid.ColumnSpan="2" Header="From Account" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <WrapPanel>
                        <Label Content="Account Number:" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TbSourceAccountNumber" VerticalAlignment="Center"/>
                    </WrapPanel>
                    <WrapPanel>
                        <Label Content="Account Holder:" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TbSourceAccountHolder" VerticalAlignment="Center"/>
                    </WrapPanel>
                    <WrapPanel>
                        <Label Content="Available Funds:" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TbSourceAvailableFunds" VerticalAlignment="Center"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- Transfer Type -->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Transfer To:" FontWeight="SemiBold"/>
                <RadioButton x:Name="RbInternal" Content="Internal Account" IsChecked="True" Checked="TransferType_Changed"/>
                <RadioButton x:Name="RbExternal" Content="External Account" Margin="15,0,0,0" Checked="TransferType_Changed"/>
            </StackPanel>

            <!-- Destination Internal -->
            <StackPanel Grid.Row="3" Grid.Column="1" x:Name="PanelInternal" Visibility="Visible">
                <Label Content="Destination Account Number (Internal):*"/>
                <!-- Provides a dropdown list of all internal accounts -->
                    <ComboBox x:Name="CmbDestInternalAccount" 
                    ItemsSource="{Binding AllOtherAccounts}" 
                    DisplayMemberPath="DisplayInfo"
                    SelectedValuePath="AccountID"/>
                </StackPanel>

            <!-- Destination External -->
            <StackPanel Grid.Row="4" Grid.Column="1" x:Name="PanelExternal" Visibility="Collapsed">
                <Label Content="Destination Sort Code (External):*"/>
                <TextBox x:Name="TxtDestExternalSortCode"/>
                <Label Content="Destination Account Number (External):*"/>
                <TextBox x:Name="TxtDestExternalAccountNo"/>
            </StackPanel>

            <!-- Amount & Description -->
            <StackPanel Grid.Row="5" Grid.Column="1" Margin="0,15,0,0">
                <Label Content="Transfer Amount (€):*"/>
                <TextBox x:Name="TxtAmount"/>
            </StackPanel>

            <StackPanel Grid.Row="6" Grid.Column="1" Margin="0,10,0,0">
                <Label Content="Description/Reference (Optional):"/>
                <TextBox x:Name="TxtDescription" MaxLength="255"/>
            </StackPanel>

            <!-- Buttons Row -->
            <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="5,20,0,5">
                <Button Content="Initiate Transfer" Click="Transfer_Click" />
            </StackPanel>

            <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="5,20,0,5">
                <Button Content="Back to accounts dashboard" Click="BackToDashboard_Click" Margin="6,46,458,-19" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="7"/>
                
            </StackPanel>
        </Grid>

    </ScrollViewer>
</Page>