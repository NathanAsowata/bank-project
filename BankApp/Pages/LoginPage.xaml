<Page x:Class="BankApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BankApp.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
        <StackPanel Width="300">
            <TextBlock Text="Staff Login" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Label Content="Username:"/>
            <TextBox x:Name="TxtUsername" />
            <Label Content="Password:"/>
            <!-- Grid to hold PasswordBox, TextBox, and Button -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Password Box (Masked) - Initially Visible -->
                <PasswordBox Grid.Column="0" x:Name="TxtPassword" VerticalAlignment="Center"/>
                <!-- Text Box (Visible) - Initially Hidden -->
                <TextBox Grid.Column="0" x:Name="TxtPasswordVisible" VerticalAlignment="Center" Visibility="Collapsed"/>

                <!-- Toggle Button -->
                <Button Grid.Column="1" x:Name="BtnTogglePasswordVisibility"
                        Click="TogglePasswordVisibility_Click"
                        VerticalAlignment="Center" Margin="5,0,0,0" Padding="5,3"
                        FontFamily="Segoe MDL2 Assets" Content="" ToolTip="Show/Hide Password"
                        MinWidth="30" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryBrush}"/>
                <!-- Set Foreground to match theme -->
            </Grid>

            <Button Content="Login" Click="LoginButton_Click" Margin="0,20,0,0"/>
            <TextBlock x:Name="ErrorMessage" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>