<Page x:Class="BankApp.Pages.ViewTransactionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BankApp.Pages"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="900"
      Title="View Transactions"
      Loaded="Page_Loaded">
    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title & Account Info -->
            <RowDefinition Height="*"/>
            <!-- Transactions Grid -->
            <RowDefinition Height="Auto"/>
            <!-- Back Button -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Transaction History" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <WrapPanel>
                <Label Content="Account:" FontWeight="SemiBold"/>
                <TextBlock x:Name="TbAccountNumber" VerticalAlignment="Center" Margin="5,0,15,0"/>
                <Label Content="Holder:" FontWeight="SemiBold"/>
                <TextBlock x:Name="TbAccountHolder" VerticalAlignment="Center" Margin="5,0,15,0"/>
                <Label Content="Current Balance:" FontWeight="SemiBold"/>
                <TextBlock x:Name="TbCurrentBalance" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </WrapPanel>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="TransactionsGrid" ItemsSource="{Binding Transactions}" CanUserAddRows="False" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Resources>
                <Style x:Key="RightAligned" TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat='g'}" Width="140"/>
                <!-- *** MODIFIED Binding for Type *** -->
                <DataGridTextColumn Header="Type" Binding="{Binding DisplayTransactionType}" Width="130"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C, ConverterCulture='en-IE'}" Width="120" ElementStyle="{StaticResource RightAligned}"/>
                <DataGridTextColumn Header="From Acc" Binding="{Binding SourceAccountID, TargetNullValue='NULL'}" Width="90"/>
                <!-- *** MODIFIED Binding for To Acc - Removed TargetNullValue *** -->
                <DataGridTextColumn Header="To Acc" Binding="{Binding DisplayDestination}" Width="90"/>
                <DataGridTextColumn Header="Reference" Binding="{Binding ReferenceNumber}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding ApprovalStatus}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Back to accounts dashboard" Click="BackToDashboard_Click"
                HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="5,20,0,5"/>

    </Grid>
</Page>