<Page x:Class="BankApp.Pages.WithdrawPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BankApp.Pages"
      mc:Ignorable="d"
       d:DesignHeight="450" d:DesignWidth="600"
      Title="Withdraw Funds"
      Loaded="Page_Loaded">

    <Grid Margin="20" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Acc No -->
            <RowDefinition Height="Auto"/>
            <!-- Holder -->
            <RowDefinition Height="Auto"/>
            <!-- Balance -->
            <RowDefinition Height="Auto"/>
            <!-- Available -->
            <RowDefinition Height="Auto"/>
            <!-- Amount -->
            <RowDefinition Height="Auto"/>
            <!-- Description -->
            <RowDefinition Height="Auto"/>
            <!-- Withdraw Button -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Back Button -->
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Withdraw Funds" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Account Number:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TbAccountNumber" FontWeight="Bold" VerticalAlignment="Center"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Account Holder:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TbAccountHolder" VerticalAlignment="Center"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Current Balance:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TbCurrentBalance" VerticalAlignment="Center"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Available Funds:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TbAvailableFunds" VerticalAlignment="Center" FontWeight="Bold"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Withdrawal Amount (€):*" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="TxtAmount" Margin="0,10,0,0"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Description (Optional):" VerticalAlignment="Center"/>
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="TxtDescription" MaxLength="255"/>

        <Button Grid.Row="7" Grid.Column="1" Content="Withdraw Funds" Click="Withdraw_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,20,0,0"/>

        <!-- ADDED Back Button -->
        <Button Grid.Row="9" Grid.Column="0"
                Content="Back to accounts dashboard"
                Click="BackToDashboard_Click"
                HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="5,20,0,5"/>

    </Grid>
</Page>